<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation"
    app:startDestination="@id/registrationFragment">

    <fragment
        android:id="@+id/weatherFragment"
        android:name="com.lwo.weather.ui.fragment.WeatherFragment"
        android:label="WeatherFragment" />
    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.lwo.weather.ui.fragment.registration.RegistrationFragment"
        android:label="RegistrationFragment" >
        <action
            android:id="@+id/action_registrationFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.lwo.weather.ui.fragment.login.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_weatherFragment"
            app:destination="@id/weatherFragment" />
    </fragment>
</navigation>